---
const title = Astro.props.title || "Andreas' Kochrezepte";
const description = Astro.props.description || "Meine pers√∂nliche Sammlung von Rezepten";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<meta name="keywords" content="Rezepte, Kochen, Backen, Kochrezepte, Vegetarisch, Desserts" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	:root {
		font-family: Optima, Candara, "Noto Sans", source-sans-pro, sans-serif;
		font-weight: normal;
		color-scheme: light dark;

		/* Animation */
		--animation-speed: 0.2s;
		--animation-easing: ease;

		/* Border radius */
		--border-radius: 0.5rem;

		/* Colors - Light mode (default) */
		--color-text: #1a1a1a;
		--color-background: whitesmoke;
		--color-page-background: white;
		--color-highlight: springgreen;
		--color-highlight-soft: palegreen;
		--color-shadow: rgba(0, 0, 0, 0.15);
	}

	@media (prefers-color-scheme: dark) {
		:root {
			/* Colors - Dark mode */
			--color-text: #whitsmoke;
			--color-background: #1a1a1a;
			--color-page-background: black;
			--color-highlight: mediumblue;
			--color-highlight-soft: navy;
			--color-shadow: rgba(0, 0, 0, 0.4);
		}
	}

	body {
		margin: 0;
		color: var(--color-text);
		background-color: var(--color-page-background);
	}

	@view-transition {
		navigation: auto;
	}
</style>
