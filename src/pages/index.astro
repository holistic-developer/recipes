---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import BaseLayout from "../layouts/BaseLayout.astro";
const recipes = await getCollection("recipes");
---

<BaseLayout>
	<main>
		<h1>Alle Rezepte</h1>
		<ul>
			{
				recipes.map((recipe) => (
					<li>
						<a href={`./recipes/${recipe.id}`}>
							<h2 transition:name={`recipe-title-${recipe.id}`}>{recipe.data?.title}</h2>
							{recipe.data?.image && (
								<Picture
									src={recipe.data.image}
									alt={recipe.data.imageAlt ?? recipe.data.title}
									width={500}
									formats={["webp", "jpg"]}
									transition:name={`recipe-image-${recipe.id}`}
									transition:persist
								/>
							)}
						</a>
					</li>
				))
			}
		</ul>
	</main>
</BaseLayout>

<style>
	main {
		max-width: 1000px;
		margin-inline: auto;
	}

	h1 {
		text-align: center;
		margin-bottom: 1.5rem;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center;
	}

	li {
		flex-grow: 1;
		display: flex;
		min-width: 200px;
		max-width: 400px;
		margin-inline: 0.3em;
	}

	a {
		display: flex;
		flex-direction: column;
		text-decoration: none;
		color: inherit;
		border-radius: var(--border-radius);
		overflow: hidden;
		background-color: var(--color-background);
		transition:
			scale var(--animation-speed) var(--animation-easing),
			box-shadow var(--animation-speed) var(--animation-easing);
		width: 100%;
	}

	a:hover {
		scale: 1.05;
		box-shadow: 0 4px 12px var(--color-shadow);
	}

	picture {
		display: block;
		width: 100%;
		height: 180px;

		img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}
	}

	h2 {
		padding: 0.5em;
		margin: 0;
		font-size: 1.25em;
		font-weight: 600;
		text-align: center;
	}
</style>
